    <link rel='stylesheet' href='stylesheets/style.css' />


    <title>Upload files</title>
    <nav class="navbar navbar-expand-xl navbar-dark bg-dark">
        <div class="container-fluid">
            <a class="navbar-brand" href="/login">My Health Records</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link" href="/login">Login</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" href="/register">Register</a>
                    </li>
            </div>
        </div>
    </nav>
    
</head>
<body>
    <div class='undernavbar'> 
        <h1>Create an account</h1>
        <% if (name) { %>
            <%= name %>
          <% } %>
        <form action="/register" method="POST">
          <div>
            <label for="name">Name:</label>
            <input type="text" id="name" name="name" placeholder="Enter your name" required>
          </div>
          <br>
          <div>
            <label for="email" style="padding-right: 4px;">Email:</label>
            <input type="email" id="email" name="email" placeholder="Enter your email"required>
          </div>
          <br>
          <div>
            <label for="password">Password: </label> 
            <input type="password" id="password" name="password"
            pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,}" required placeholder="Enter a password"> 

            <label for="confirmPassword">Confirm password: </label>
            <input type="password" id="confirmPassword" name="confirmPassword"
            pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,}" required placeholder="Confirm your password">
          </div>

          <div>
            <input type="checkbox" onclick="showPass()"> Show Password
            <script>
                function showPass() {
                    var ptype = document.getElementById("password");
                    var cptype = document.getElementById("confirmPassword");
                    if (ptype.type === "password" && cptype.type === "password") {
                        ptype.type = "text";
                        cptype.type = "text";
                    } else {
                        ptype.type = "password";
                        cptype.type = "password";
                    }
                }
            </script>
          </div>
          <div class="under-textbox">
            Your password must contain 8 characters or more with at least one uppercase, one lower case, and one number 
          </div>
          <input type="submit" value="Submit"></button>
        </form>
        <form action="/login" method="GET" style= "padding-top: 1%">
            <input type="submit" value="Go to log in page">
        </form>
    </div>
    
</body>
